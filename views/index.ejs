<%- include('partials/header.ejs') %>

  <aside>
    <div>
      <img src="/assets/images/scrollbook-logo.svg" alt="Scrollbook Logo" />
      <ul>
        <li>The Lord of The Rings</li>
        <li>The Shining</li>
        <li>Hell on Earth</li>
        <li>Fifty Shades Of Grey</li>
        <li>Alien: Isolation</li>
      </ul>
    </div>
  </aside>
  <main>
    <ul id="message-container"></ul>
    <p id="loading-messages"></p>
    <p id="is-typing"></p>
    <ul class="emojis">
      <li title="Happy Face">😀</li>
      <li title="Angry Face">😠</li>
      <li title="Crying Face">😢</li>
      <li title="Loud Crying Face">😭</li>
      <li title="Face with stuck-out tongue and tightly-closed eyes">😝</li>
      <li title="Face with stuck-out tongue and winking eye">😜</li>
    </ul>
    <form action="/" id="send-container">
      <button type="button">
        <img src="assets/icons/picture.svg" alt="Picture Icon">
      </button>
      <button id="smiley-button" type="button">
        <img src="assets/icons/smiley.svg" alt="Smiley Icon">
      </button>
      <input type="text" placeholder="Type a message..." id="message-input" autocomplete="off">
      <button type="submit" class="submit-button">
        <img src="assets/icons/send.svg" alt="Send Icon">
      </button>
    </form>
  </main>

  <%- include('partials/footer.ejs') %>