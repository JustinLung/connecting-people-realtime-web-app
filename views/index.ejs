<%- include('partials/header.ejs') %>

<aside>
  <div>
    <img src="/assets/images/scrollbook-logo.svg" alt="Scrollbook Logo" />
  </div>
</aside>
<main>
  <ul id="message-container"></ul>
  <div id="loading-messages"></div>
  <div id="feedback"></div>
  <form id="send-container">
    <button>
      <img src="assets/icons/smiley.svg" alt="Emoji Icon">
    </button>
    <button>
      <img src="assets/icons/picture.svg" alt="Picture Icon">
    </button>
    <input type="text" placeholder="Type a message..." id="message-input">
    <button type="submit" class="submit-button">
      <img src="assets/icons/send.svg" alt="Send Icon">
    </button>
  </form>
</main>

<%- include('partials/footer.ejs') %>